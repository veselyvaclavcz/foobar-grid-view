    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "foobar2000 Community"
            VALUE "FileDescription", "Album Art Grid View Plugin"
            VALUE "FileVersion", "1.0.0.0"
            VALUE "InternalName", "foo_albumart_grid"
            VALUE "LegalCopyright", "Copyright (C) 2024"
            VALUE "OriginalFilename", "foo_albumart_grid.dll"
            VALUE "ProductName", "foobar2000 Album Art Grid View"
            VALUE "ProductVersion", "1.0.0.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END